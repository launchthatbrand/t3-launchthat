{
  "name": "create-t3-turbo",
  "private": true,
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "packageManager": "pnpm@10.6.3",
  "scripts": {
    "dev:puck": "turbo watch dev -F @acme/puck...",
    "dev:portal": "turbo dev -F t3-launchthat-portal... -F t3-launchthat-puck...",
    "dev:traderlaunchpad": "turbo watch dev -F @acme/traderlaunchpad...",
    "dev:payload": "turbo watch dev -F @acme/payload...",
    "dev:inventory": "turbo watch dev -F @acme/inventory...",
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @acme/db push",
    "db:studio": "turbo -F @acme/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @acme/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache && pnpm lint:portal-plugins",
    "lint:portal-plugins": "node scripts/validate-portal-plugins.mjs",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "lint:wsf": "pnpm dlx sherif@latest -f",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "tcopy": "turbo gen workspace --copy",
    "generate:plugin": "pnpm turbo gen portal-plugin"
  },
  "devDependencies": {
    "@acme/prettier-config": "workspace:*",
    "@react-email/components": "^1.0.2",
    "@react-email/render": "^2.0.0",
    "@swc-node/register": "1.10.9",
    "@swc/cli": "0.6.0",
    "@swc/jest": "0.2.37",
    "@turbo/gen": "^2.4.4",
    "@types/d3-hierarchy": "^3.1.7",
    "ai": "^6.0.3",
    "convex-helpers": "^0.1.95",
    "d3-hierarchy": "^3.1.2",
    "dependency-cruiser": "^12.10.0",
    "dotenv-cli": "^10.0.0",
    "next": "catalog:",
    "prettier": "catalog:",
    "turbo": "^2.4.4",
    "typescript": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "@clerk/shared": "3.9.5",
      "@clerk/nextjs>@clerk/shared": "3.9.5",
      "@clerk/clerk-react>@clerk/shared": "3.9.5"
    }
  },
  "prettier": "@acme/prettier-config"
}

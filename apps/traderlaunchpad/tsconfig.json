{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@acme/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@acme/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@convexcms-config": [
        "./src/convexcms.config.ts"
      ],
      "@convex-config/*": [
        "./convex/*"
      ],
      "launchthat-plugin-onboarding": [
        "../../packages/launchthat-plugin-onboarding/src/index.ts"
      ],
      "launchthat-plugin-onboarding/*": [
        "../../packages/launchthat-plugin-onboarding/src/*"
      ],
      "launchthat-plugin-discord": [
        "../../packages/launchthat-plugin-discord/src/index.ts"
      ],
      "launchthat-plugin-discord/*": [
        "../../packages/launchthat-plugin-discord/src/*"
      ],
      "launchthat-plugin-notifications": [
        "../../packages/launchthat-plugin-notifications/src/index.ts"
      ],
      "launchthat-plugin-notifications/*": [
        "../../packages/launchthat-plugin-notifications/src/*"
      ],
      "launchthat-plugin-core-tenant": [
        "../../packages/launchthat-plugin-core-tenant/src/index.ts"
      ],
      "launchthat-plugin-core-tenant/*": [
        "../../packages/launchthat-plugin-core-tenant/src/*"
      ],
      "launchthat-plugin-email": [
        "../../packages/launchthat-plugin-email/src/index.ts"
      ],
      "launchthat-plugin-email/*": [
        "../../packages/launchthat-plugin-email/src/*"
      ],
      "launchthat-plugin-shortlinks": [
        "../../packages/launchthat-plugin-shortlinks/src/index.ts"
      ],
      "launchthat-plugin-shortlinks/*": [
        "../../packages/launchthat-plugin-shortlinks/src/*"
      ],
      "launchthat-plugin-crm/*": [
        "../../packages/launchthat-plugin-crm/src/*"
      ],
      "launchthat-plugin-affiliates": [
        "../../packages/launchthat-plugin-affiliates/src/index.ts"
      ],
      "launchthat-plugin-affiliates/*": [
        "../../packages/launchthat-plugin-affiliates/src/*"
      ],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "eslint.config.ts"
  ]
}
{
  "extends": "@acme/tsconfig/compiled-package.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "launchthat-plugin-core": [
        "../launchthat-plugin-core/src/index"
      ],
      "@/*": [
        "./src/*"
      ],
      "@portal/convexspec": [
        "../../apps/portal/convexspec.ts"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}

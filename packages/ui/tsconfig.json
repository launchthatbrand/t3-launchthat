{
  "extends": "@acme/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@acme/ui/*": ["src/*"],
      "src//*": ["src/components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

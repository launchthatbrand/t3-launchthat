{
  "extends": "@acme/tsconfig/compiled-package.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "launchthat-plugin-core": ["../launchthat-plugin-core/src/index"],
      "@portal/*": ["../../apps/portal/*"],
      "@portal/convexspec": ["../../apps/portal/convexspec.ts"],
      "@acme/ui": ["../ui/src/index"],
      "@acme/ui/*": ["../ui/src/*"],
      "@/*": ["../../apps/portal/src/*"],
      "~/*": ["../../apps/portal/src/*"],
      "@convex-config/*": ["../../apps/portal/convex/*"],
      "@convex-config/_generated/*": ["../../apps/portal/convex/_generated/*"],
      "@/convex/_generated/*": ["../../apps/portal/convex/_generated/*"],
      "@/convex/*": ["../../apps/portal/convex/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
